<div class="container show">
  <h1>プロフィール画像編集</h1>
  <div class="row">
    <% if @user == current_user %>

    <div class="col-lg-12 img_box">
      <%= form_with(model: @user, local: true) do |f| %>
     　<p>
        <%= f.label :画像 %>
        <%= f.file_field :avatar%>
      </p>
      <%= f.submit %>
      <% end %>
    </div>

    <% else %>
      <td></td>
      <td></td>
    <% end %>

    
    <p class="out_txt">
      <p class="out_txt"><%= link_to "ログアウト", session_path(current_user.id), method: :delete %></p>
    </p>
  </div>
</div>

<p class="back">
  <%= link_to 'Back', blogs_path %>
</p>