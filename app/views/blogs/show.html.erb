<div class="container show">
   <% unless @blog.user_id == current_user.id %>
  <% if @favorite.present? %>
    <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'お気に入りする', favorites_path(blog_id: @blog.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>
  
  <h1>投稿詳細</h1>
  <div class="row">
    <div class="col-lg-12 img_box">
      <p class="name">名前:
        <%= @blog.user.name%>
      </p>
      <p class="img">
        <%= image_tag @blog.img.url %>
      </p>
      <p class="content">
        <%= @blog.content %>
      </p>

     
    </div>
   
    <p class="out_txt">
      <%= link_to "ログアウト", session_path(current_user.id), method: :delete %>
    </p>
  </div>
</div>
<p class="back"><%= link_to 'Back', blogs_path %></p>
